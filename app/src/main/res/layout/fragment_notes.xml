<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.notes.NotesFragment">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.card.MaterialCardView
            style="?attr/materialCardViewOutlinedStyle"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_new_note"
                    android:scrollbars="vertical"
                    android:maxLines="3"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/black"
                    android:textSize="16sp"
                    android:hint="@string/writeNote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <HorizontalScrollView
                    android:scrollbars="none"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/edt_new_note"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_record_voice">
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/cg_attachments"
                        app:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipSpacingVertical="0dp" />
                </HorizontalScrollView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_record_voice"
                    style="@style/Widget.Material3.Button.IconButton"
                    app:icon="@drawable/baseline_keyboard_voice_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/btn_save_note"
                    app:layout_constraintBottom_toBottomOf="@id/btn_save_note"
                    app:layout_constraintEnd_toStartOf="@id/btn_take_photo"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_take_photo"
                    style="@style/Widget.Material3.Button.IconButton"
                    app:icon="@drawable/ic_baseline_photo_camera_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/btn_save_note"
                    app:layout_constraintBottom_toBottomOf="@id/btn_save_note"
                    app:layout_constraintEnd_toStartOf="@id/btn_save_note"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_save_note"
                    android:textSize="12sp"
                    android:text="@string/save"
                    app:cornerRadius="8dp"
                    android:padding="0dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@id/edt_new_note"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_notes"
            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/item_note"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_note"
        android:layout_gravity="bottom|end"
        style="?attr/floatingActionButtonLargeTertiaryStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/new_note"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="96dp"
        app:srcCompat="@drawable/ic_outline_add_24"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>