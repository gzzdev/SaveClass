<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.view.note.NoteFragment">
    <com.google.android.material.appbar.AppBarLayout
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            app:navigationIcon="@drawable/ic_baseline_check_24"
            app:navigationIconTint="@color/black"
            android:background="@android:color/transparent"
            app:title=""
            app:menu="@menu/menu_note_app_bar"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"/>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="8dp">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_category"
            style="@style/Widget.Material3.Button.IconButton"
            android:padding="2dp"
            app:icon="@drawable/ic_outline_book_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
        <Spinner
            android:id="@+id/spCategories"
            android:layout_width="180dp"
            android:layout_height="32dp"
            android:maxWidth="200dp"
            android:layout_marginStart="2dp"
            app:layout_constraintTop_toTopOf="@id/btn_category"
            app:layout_constraintBottom_toBottomOf="@id/btn_category"
            app:layout_constraintLeft_toRightOf="@id/btn_category"/>
        <TextView
            android:id="@+id/tv_head_note"
            android:layout_marginStart="2dp"
            android:textSize="12sp"
            tools:text="@string/note_head"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/btn_category"
            app:layout_constraintBottom_toBottomOf="@id/btn_category"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/spCategories"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_title"
            android:layout_marginTop="2dp"
            android:textSize="28sp"
            android:background="@android:color/transparent"
            android:textColorHint="@color/black"
            android:hint="@string/noteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_category"/>
        <HorizontalScrollView
            android:id="@+id/hs_tag_group"
            android:scrollbars="none"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edt_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chTagGroup"
                    app:singleLine="true"
                    android:layout_marginStart="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_tag"
                    style="@style/Widget.Material3.Button.IconButton.Outlined"
                    android:text="@string/tag"
                    android:textSize="10sp"
                    app:iconSize="12dp"
                    app:icon="@drawable/ic_outline_new_label_24"
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </HorizontalScrollView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/hs_tag_group"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="4dp"
            android:layout_width="0dp"
            android:layout_height="0dp">
            <ScrollView
                android:fillViewport="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_images"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        app:layoutManager="com.google.android.material.carousel.CarouselLayoutManager"
                        android:visibility="gone"
                        tools:listitem="@layout/item_image_slider"
                        android:clipChildren="false"
                        android:clipToPadding="false" />
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cd_edt_note"
                        style="?attr/materialCardViewElevatedStyle"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edtNote"
                            android:layout_margin="4dp"
                            android:padding="4dp"
                            android:textSize="16sp"
                            android:background="@android:color/transparent"
                            android:textColorHint="@color/black"
                            android:hint="@string/writeNote"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.card.MaterialCardView>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </ScrollView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cd_format_text_options"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginVertical="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/format_text_options"
                    app:singleSelection="false"
                    android:elevation="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                        app:icon="@drawable/ic_baseline_format_bold_24" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnItalic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                        app:icon="@drawable/ic_baseline_format_italic_24" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUnderlined"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                        app:icon="@drawable/ic_baseline_format_underlined_24" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                        app:icon="@drawable/ic_baseline_format_color_text_24" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                        app:icon="@drawable/ic_baseline_format_list_bulleted_24" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnListNumbered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                        app:icon="@drawable/ic_baseline_format_list_numbered_24" />
                </com.google.android.material.button.MaterialButtonToggleGroup>
            </com.google.android.material.card.MaterialCardView>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>