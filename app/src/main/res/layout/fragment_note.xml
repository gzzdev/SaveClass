<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.view.note.NoteFragment">
    <com.google.android.material.appbar.AppBarLayout
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            app:navigationIcon="@drawable/ic_baseline_check_24"
            app:navigationIconTint="@color/black"
            android:background="@android:color/transparent"
            app:title=""
            app:menu="@menu/menu_note_app_bar"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"/>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_head_note"
            android:layout_marginHorizontal="8dp"
            android:textSize="12sp"
            tools:text="@string/note_head"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtTitle"
            android:layout_marginTop="2dp"
            android:layout_marginHorizontal="8dp"
            android:textSize="28sp"
            android:background="@android:color/transparent"
            android:textColorHint="@color/black"
            android:hint="@string/noteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_head_note"/>
        <Button
            android:id="@+id/btn_category"
            style="@style/Widget.Material3.Button.IconButton"
            app:icon="@drawable/ic_outline_book_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtTitle"/>
        <Spinner
            android:id="@+id/spCategories"
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:maxWidth="200dp"
            android:layout_marginStart="2dp"
            app:layout_constraintTop_toTopOf="@id/btn_category"
            app:layout_constraintBottom_toBottomOf="@id/btn_category"
            app:layout_constraintLeft_toRightOf="@id/btn_category"/>

        <!--<com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddTag"
            style="@style/Widget.Material3.Button.IconButton"
            app:icon="@drawable/ic_outline_new_label_24"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/spCategories"
            app:layout_constraintTop_toTopOf="@id/hsChTagGroup"
